{
    "manifest_version": 3,
    "name": "SIP Softphone",
    "version": "1.0.0",
    "description": "Софтфон для звонков на sip-номера",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon.png",
            "24": "icon.png",
            "32": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png",
        "256": "icon.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "tabs",
        "alarms",
        "contentSettings",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}